    <corners
        android:radius="10dp"
        android:bottomRightRadius="100dp"
        android:topRightRadius="100dp"/>

    <solid
        android:color="#ff660d" />

    <size
        android:width="82dp"
        android:height="82dp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
