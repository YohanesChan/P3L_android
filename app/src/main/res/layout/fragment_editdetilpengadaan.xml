<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Detil Produk Pengadaan"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/title"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/jmled_dpgd_etxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Jumlah"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textColor="@color/object1"
            android:id="@+id/hrged_dpgd_txt"/>
    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:id="@+id/switchdpgd_btn"
        android:checked="false"
        android:text="Edit ? "></Switch>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/editdpgd_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:paddingHorizontal="50dp"
            android:text="Edit"
            android:textColor="@color/button"
            android:background="@drawable/button1"/>
        <Button
            android:id="@+id/deletedpgd_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:paddingHorizontal="50dp"
            android:text="Hapus"
            android:textColor="#fff"
            android:background="@drawable/button"/>
    </LinearLayout>
</LinearLayout>